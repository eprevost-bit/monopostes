<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_l10n_es_aeat_mod180_report_tree" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod180.report.tree</field>
        <field name="model">l10n.es.aeat.mod180.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_tree" />
        <field name="arch" type="xml">
            <list position="attributes">
                <attribute name="string">AEAT 180 reports</attribute>
            </list>
            <field name="period_type" position="after">
                <field name="casilla_03" />
            </field>
        </field>
    </record>

    <record id="view_l10n_es_aeat_mod180_report_form" model="ir.ui.view">
        <field name="name">l10n_es.aeat.mod180.report.form</field>
        <field name="model">l10n.es.aeat.mod180.report</field>
        <field name="inherit_id" ref="l10n_es_aeat.view_l10n_es_aeat_report_form" />
        <field name="arch" type="xml">
            
            <field name="previous_number" position="after">
                <field name="tipo_declaracion_positiva" string="Result type" invisible="casilla_05 &lt;= 0.0" />
                <field name="tipo_declaracion_negativa" string="Result type" invisible="casilla_05 &gt; 0.0" />
                <field name="tipo_declaracion" invisible="True" />
            </field>

            <group name="group_declaration" position="after">
                <group string="Result" name="group_result" invisible="state == 'draft'" colspan="4">
                    
                    <group string="Amounts retained">
                        <field name="casilla_01" />
                        <field name="casilla_02" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="sign" />
                        <field name="casilla_03" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    </group>

                    <group string="Totals" invisible="1">
                        <field name="casilla_04" widget="monetary" options="{'currency_field': 'currency_id'}" />
                        <field name="casilla_05" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    </group>

                    <separator string="Details" colspan="4"/> 

                    <notebook colspan="4">
                        <page string="General" invisible="1">
                            <group>
                                <group string="Calculation parameters"></group>
                                <group string="Summary" invisible="state in ('draft', 'cancelled')"></group>
                            </group>
                        </page>
                        <page string="Líneas de impuestos" invisible="state in ('draft', 'cancelled')">
                            <field name="tax_line_ids" nolabel="1" readonly="1" force_save="1" />
                        </page>
                        <page string="Registro de perceptores" invisible="state in ('draft', 'cancelled')">
                            <field name="recipient_record_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="partner_id" width="200px"/>
                                    <!-- <field name="representative_vat" optional="hide"/> -->
                                    
                                    <field name="accrual_year" optional="show" string="Año"/>
                                    <field name="sign" optional="show"/>
                                    
                                    <field name="retentions_base" sum="Total Base"/>
                                    <!-- <field name="retentions_percentage" string="%" optional="show"/> -->
                                    <field name="retentions_fee" sum="Total Retenciones"/>

                                    <field name="l10n_es_aeat_real_estate_id" optional="hide" string="Ref. Catastral"/>
                                    
                                    <field name="base_move_line_ids" widget="many2many_tags" optional="hide"/>
                                </list>
                            </field>
                        </page>
                        <page string="Banco">
                            <field name="partner_bank_id" position="attributes"><attribute name="required">False</attribute></field>
                        </page>
                    </notebook>

                </group>
            </group>

            <!-- <field name="partner_bank_id" position="attributes">
                <attribute name="required">False</attribute>
            </field>
            
            <form position="inside">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form> -->
        </field>
    </record>

    <record id="action_l10n_es_aeat_mod180_report" model="ir.actions.act_window">
        <field name="name">AEAT model 180</field>
        <field name="res_model">l10n.es.aeat.mod180.report</field>
        <field name="view_mode">form,list</field>
        <field name="help">Create and query AEAT Model 180 reports.</field>
    </record>

    <record
        id="action_l10n_es_aeat_mod180_report_tree"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="2" />
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_l10n_es_aeat_mod180_report_tree" />
        <field name="act_window_id" ref="action_l10n_es_aeat_mod180_report" />
    </record>

    <record
        id="action_l10n_es_aeat_mod180_report_form"
        model="ir.actions.act_window.view"
    >
        <field name="sequence" eval="3" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_l10n_es_aeat_mod180_report_form" />
        <field name="act_window_id" ref="action_l10n_es_aeat_mod180_report" />
    </record>

    <menuitem
        id="menu_aeat_mod180_report"
        parent="l10n_es_aeat.menu_l10n_es_aeat_submenu"
        action="action_l10n_es_aeat_mod180_report"
        sequence="180"
        name="AEAT 180 model"
    />
    <function model="l10n.es.aeat.mod180.report" name="action_init_hook" />
</odoo>