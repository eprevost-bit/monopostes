<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_payment_term_form_inherit_payment_day" model="ir.ui.view">
        <field name="name">account.payment.term.form.payment.day</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">

            <!-- Insertamos en el formulario de account.payment.term.line -->

            <xpath expr="//field[@name='line_ids']//list//field[@name='delay_type']" position="before">
                <field name="payment_day" invisible="delay_type != 'days_after_fixed_day'"/>
            </xpath>

        </field>
    </record>

</odoo>
