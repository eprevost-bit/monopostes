<odoo>
    <record id="view_define_emplacement_wizard_form" model="ir.ui.view">
        <field name="name">define.emplacement.form</field>
        <field name="model">define.emplacement</field>
        <field name="arch" type="xml">
            <form string="Definir Emplazamiento">
                <group>
                    <field name="emplacement_name" string="Nombre" default="Nuevo emplazamiento"/>
                    <field name="type_of_ad" string="Tipo de Publicidad"/>
                    <field name="number_of_spaces" string="Superficies anunciables" default="1"/>
                    <field name="additional_notes"/>
                    <field name="create_project" string="Crear Proyecto Asociado" default="True"/>
                    <field name="new_project_name" string="Nombre del Proyecto" invisible='not create_project'/>
                </group>
                <footer>
                    <button name="apply_changes" type="object" string="Guardar" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
