<odoo>
    <record id="purchase_order_form_inherit_opportunity_button" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.opportunity.button</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Insertar el smart button en el button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_opportunity"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-briefcase"
                        invisible="opportunity_id == False">
                    <field name="opportunity_id" widget="statinfo" string="Oportunidad"/>
                </button>
            </xpath>

        </field>
    </record>
</odoo>
