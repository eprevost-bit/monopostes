<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mp_benefit_report_wizard_form" model="ir.ui.view">
            <field name="name">mp.benefit.report.wizard.form</field>
            <field name="model">mp.benefit.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte de Ingresos">
                    <sheet>
                        <div class="text-center text-muted">
                            <p>Calcula y cruza datos de <b>Ventas (Suscripciones)</b> y <b>Facturación Real</b> separando Alquiler e Iluminación.</p>
                        </div>
                    </sheet>
                    <footer>
                        <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_mp_benefit_report_wizard" model="ir.actions.act_window">
            <field name="name">Reporte de Ingresos y Facturación</field>
            <field name="res_model">mp.benefit.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_mp_benefit_report_line_search" model="ir.ui.view">
            <field name="name">mp.benefit.report.line.search</field>
            <field name="model">mp.benefit.report.line</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="emplacement_id"/>
                    <field name="ad_space_id"/>
                    <field name="sale_order_id"/>
                    <group expand="1" string="Agrupar por">
                        <filter string="Emplazamiento" name="group_by_emplacement" context="{'group_by': 'emplacement_id'}"/>
                        <filter string="Espacio" name="group_by_space" context="{'group_by': 'ad_space_id'}"/>
                        <filter string="Provincia" name="group_by_state" context="{'group_by': 'state_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_mp_benefit_report_line_list" model="ir.ui.view">
            <field name="name">mp.benefit.report.line.list</field>
            <field name="model">mp.benefit.report.line</field>
            <field name="arch" type="xml">
                <list string="Detalle de Ingresos" create="false" edit="false" delete="false">
                    <field name="emplacement_id" optional="show"/>
                    <field name="state_id" optional="show"/>
                    <field name="ad_space_id"/>
                    <!-- <field name="sale_order_id" string="Ref. Venta"/> -->
                    
                    <field name="amount_rent" sum="Total Alquiler (Venta)" optional="show" decoration-info="1"/>
                    <field name="amount_lighting" sum="Total Iluminación (Venta)" optional="show" decoration-info="1"/>
                    <field name="total_amount" sum="Total Ventas" decoration-bf="1" decoration-info="1"/>
                    
                    <field name="fact_amount_rent" sum="Total Alquiler (Fact)" optional="show" decoration-success="1"/>
                    <field name="fact_amount_lighting" sum="Total Iluminación (Fact)" optional="show" decoration-success="1"/>
                    <field name="fact_total_amount" sum="Total Facturado" decoration-bf="1" decoration-success="1"/>
                </list>
            </field>
        </record>

        <record id="view_mp_benefit_report_line_pivot" model="ir.ui.view">
            <field name="name">mp.benefit.report.line.pivot</field>
            <field name="model">mp.benefit.report.line</field>
            <field name="arch" type="xml">
                <pivot string="Análisis de Ingresos" disable_linking="True">
                    <field name="emplacement_id" type="row"/>
                    <field name="ad_space_id" type="row"/>
                    
                    <field name="amount_rent" type="measure"/>
                    <field name="amount_lighting" type="measure"/>
                    <field name="total_amount" type="measure"/>
                    
                    <field name="fact_amount_rent" type="measure"/>
                    <field name="fact_amount_lighting" type="measure"/>
                    <field name="fact_total_amount" type="measure"/>
                </pivot>
            </field>
        </record>
        
        <record id="view_mp_benefit_report_line_graph" model="ir.ui.view">
            <field name="name">mp.benefit.report.line.graph</field>
            <field name="model">mp.benefit.report.line</field>
            <field name="arch" type="xml">
                <graph string="Ingresos por Espacio" type="bar" stacked="True">
                    <field name="ad_space_id"/>
                    <field name="total_amount" type="measure" string="Total Venta"/>
                    <field name="fact_total_amount" type="measure" string="Total Facturado"/>
                </graph>
            </field>
        </record>

        <menuitem id="menu_mp_benefit_report"
                  name="Informes"
                  parent="mp_site.mp_site_menu_root"
                  sequence="30"/>

        <menuitem id="menu_mp_benefit_report_reports"
            name="Ingresos Emplazamiento"
            parent="menu_mp_benefit_report"
            action="action_mp_benefit_report_wizard"
            sequence="40"/>
    </data>
</odoo>