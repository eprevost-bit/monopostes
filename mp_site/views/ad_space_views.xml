<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="mp_site_ad_space_form_view" model="ir.ui.view">
            <field name="name">mp.site.ad.space.form</field>
            <field name="model">mp.site.ad.space</field>
            <field name="arch" type="xml">
                <form string="Superficies anunciables">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="emplacement_id"/>
                                <field name="ubication" string="Ubicación"/>
                                <field name="way"/>
                                <field name="size_id"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="fecha_fin_contrato" string="Fin del contrato"/>
                                <field name="product_id" string="Tarifa" domain="[('type', '=', 'ad_space')]" />
                                <field name="commercialization_ease"/>
                                <!-- <field name="usage_count"/> -->
                                <field name="count_used"/>
                                <field name="current_advertiser_id" options="{'no_create': True}"/>
                                <field name="campaign_id"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="mp_site_ad_space_tree_view" model="ir.ui.view">
            <field name="name">mp.site.ad.space.list</field>
            <field name="model">mp.site.ad.space</field>
            <field name="arch" type="xml">
                <list decoration-danger="state == 'occupied'" decoration-warning="state == 'offered'" string="Superficies anunciables" class="left-align-tree">
                    <field name="name" string="Nombre"/>
                    <field name="emplacement_id" string="Emplazamiento" optional="hide"/>
                    <field name="emplacement_lighting_type" optional="show"/>
                    <field name="emplacement_state" optional="show"/>
                    <field name="emplacement_city" optional="show"/>
                    <field name="ubication" string="Ubicación"/>
                    <field name="way"/>
                    <field name="size_id" string="Tamaño"/>
                    <field name="product_id" string="Tarifa"/>
                    <field name="count_used" string="Veces presupuestadas" optional="hide"/>
                    <!-- <field name="usage_count" string="Usos" optional="hide"/> -->
                    <field name="state" string="Estado" optional="hide"/>
                    <field name="fecha_fin_contrato" string="Fin del contrato" optional="show"/>
                    <field name="campaign_id" optional="show"/>
                </list>
            </field>
        </record>


        <record id="mp_site_ad_space_action" model="ir.actions.act_window">
            <field name="name">Espacios Publicitarios</field>
            <field name="res_model">mp.site.ad.space</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea tu primer espacio publicitario.
                </p><p>
                    Aquí podrás gestionar cada cara o espacio individual de tus vallas y monopostes.
                </p>
            </field>
        </record>
    </data>
</odoo>