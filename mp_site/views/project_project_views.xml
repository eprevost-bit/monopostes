        <record id="view_project_form_inherit" model="ir.ui.view">
            <field name="name">project.project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="before">
                    
                    <field name="emplacements_ids" widget="many2many_tags" placeholder="Seleccionar emplazamiento..."/>

                </xpath>
            </field>
        </record>

        <record id="view_task_form_replace_user_ids_with_contacts" model="ir.ui.view">
            <field name="name">project.task.form.replace.user_ids.with.contacts</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_ids']" position="replace">
                    <field name="partner_ids" string="Montadores" widget="many2many_tags" placeholder="Seleccionar contacto..."/>
                </xpath>
            </field>
        </record>
        


