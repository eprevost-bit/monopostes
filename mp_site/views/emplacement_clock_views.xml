<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Vista de lista -->
    <record id="view_emplacement_clock_tree" model="ir.ui.view">
        <field name="name">emplacement.clock.tree</field>
        <field name="model">emplacement.clock</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="automatic"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_emplacement_clock_form" model="ir.ui.view">
        <field name="name">emplacement.clock.form</field>
        <field name="model">emplacement.clock</field>
        <field name="arch" type="xml">
            <form string="Emplacement Clock">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="automatic"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir las vistas -->
    <record id="action_emplacement_clock" model="ir.actions.act_window">
        <field name="name">Relojes de Ubicación</field>
        <field name="res_model">emplacement.clock</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuevo reloj de ubicación.
            </p>
        </field>
    </record>

    <!-- Menú dentro de "Configuración" -->
    <menuitem id="menu_emplacement_clock"
              name="Relojes de Ubicación"
              parent="mp_site_menu_config_root"
              action="action_emplacement_clock"
              sequence="10"/>
              
</odoo>
