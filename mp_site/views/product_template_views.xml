<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_emplacement_type_inherit" model="ir.ui.view">
            <field name="name">product.template.form.view.emplacement.type.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="emplacement_type" widget="radio" invisible="type != 'emplacement'"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>