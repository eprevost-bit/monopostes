<odoo>
    <record id="view_purchase_order_form_inherit_mp_site" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.mp.site</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Añadimos el booleano debajo de algún campo existente -->
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="intercambio_emplazamiento"/>
            </xpath>

            <!-- Añadimos la pestaña condicional -->
            <xpath expr="//notebook" position="inside">
                <page string="Intercambio de emplazamiento" invisible="not intercambio_emplazamiento">
                    <group>
                        <field name="ubicacion"/>
                        <field name="kilometro"/>
                        <field name="municipio"/>
                        <field name="emplacement_text"/>
                    </group>
                </page>
            </xpath>

            <xpath expr="//page[@name='purchase_delivery_invoice']" position="inside">
                <group>
                    <field name="commission_agent_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
