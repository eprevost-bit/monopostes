<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_invoice_filter_date_range" model="ir.ui.view">
        <field name="name">account.move.select.date.range</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <separator/>
                <field name="invoice_date" string="Fecha Inicio (Desde)"
                       filter_domain="[('invoice_date', '&gt;=', self)]"/>

                <field name="invoice_date" string="Fecha Fin (Hasta)"
                       filter_domain="[('invoice_date', '&lt;=', self)]"/>
            </xpath>
        </field>
    </record>
</odoo>